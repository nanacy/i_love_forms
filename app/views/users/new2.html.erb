	<center>
		<br><br>
		<h1>Page formulaire 2</h1>
		<small id="emailHelp" class="form-text text-muted">Fais Ã  l'aide de RUBY (form_tag).</small><br>

		<!-- formulaire : RUBY (form_tag) -->
		 <%= form_tag method: "post" do %>
			<%= label_tag 'Username:' %><br>
			<%= text_field_tag 'username',	nil, class: "form-control col-sm-5", placeholder:"ex : LaraCroft" %><br>

			<%= label_tag 'Email address:' %><br>
			<%= text_field_tag 'email' ,nil, class: "form-control col-sm-5", placeholder:"ex : name@example.com" %><br>

			<%= label_tag 'Biographie:' %><br>
			<%= text_area_tag 'bio' ,nil, class: "form-control col-sm-5" %><br><br>

			<%= submit_tag "Submit the form" , class:"btn btn-primary"%> <br><br>


			<p>Retour vers : <a href="/">Accueil</a></p>
		<% end %>
	</center>



</body>
